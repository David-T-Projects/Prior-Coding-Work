					max_tmax = tmax;
				}
				avg_tmax += tmax;

				tmin = stof(dataline.substr(83, 5));
				if (tmin < min_tmin)
				{
					min_tmin = tmin;
				}
				avg_tmin += tmin;
				counter++;
			}
		}

		avg_tmax = (avg_tmax / counter);
		avg_tmin = (avg_tmin / counter);
		date_num = date2_num - date_num;

		cout << "The station " << user_station << " had the following temperatures over " << date_num <<
