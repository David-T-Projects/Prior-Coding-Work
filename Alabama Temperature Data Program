	outfile.open("C:/Users/djtol/Desktop/Schools Stuff/Temp/Filtered_AL_Weather_Station.txt");

	if (!outfile)
	{
		cout << "Unable to open the output file. " << endl;
		return(1);
	}
	else
	{
		cout << "Output file opened." << endl;
	}

	getline(infile, dataline);
