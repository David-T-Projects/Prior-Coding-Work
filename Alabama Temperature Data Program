	unsigned int pos_date = 0;
	unsigned int pos_prcp = 0;
	unsigned int pos_tmax = 0;
	unsigned int pos_tmin = 0;

	float prcp = 0, tmax = 0, tmin = 0;

	ifstream infile;
	ofstream outfile;

	cout << "WEATHER STATION DATA" << endl << endl;
