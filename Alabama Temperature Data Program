		case 1:
			month2_str = "January";
			break;
		case 2:
			month2_str = "February";
			break;
		case 3:
			month2_str = "March";
			break;
		case 4:
			month2_str = "April";
			break;
		case 5:
			month2_str = "May";
			break;
		case 6:
			month2_str = "June";
			break;
		case 7:
			month2_str = "July";
			break;
		case 8:
			month2_str = "August";
			break;
		case 9:
			month2_str = "September";
			break;
		case 10:
			month2_str = "October";
			break;
