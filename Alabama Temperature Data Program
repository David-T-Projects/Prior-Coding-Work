		cout << "TMAX begins at column: " << pos_tmax << endl;
	}
	pos_tmin = dataline.find("TMIN");
	if (pos_tmin <= dataline.length())
	{
		cout << "TMIN begins at column: " << pos_tmin << endl;
	}

	getline(infile, dataline);
	outfile << dataline << endl;

