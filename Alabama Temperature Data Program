	int counter = 1;
	pos_station_name = 0;
	pos_date = 0;
	pos_prcp = 0;
	pos_tmax = 0;
	pos_tmin = 0;

	prcp = 0, tmax = 0, tmin = 0;

	infile.open("C:/Users/djtol/Desktop/Schools Stuff/Temp/Filtered_AL_Weather_Station.txt");

